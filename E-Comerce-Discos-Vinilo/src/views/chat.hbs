<main class="chatContainer">
  <section class="chatContainer--chatSection">
    <a href="/products/inicio" class="goBackBtn">// Volver //</a>
    <div id="chatSection--chatWindow">
      <header class="chatWindow-header">
        <img
          src="https://res.cloudinary.com/dqykftyy6/image/upload/v1696363822/ProyectoBackEnd/avatarChat2_snxaym.svg"
          alt="Avatar Chat"
          style="scale: 140%;"
        />
        <span>Staff</span>
        <script>
          const user = "{{userFirstName}}";
        </script>
        <p id="welcome-message" style="margin-left:auto"><strong
            style="font-size: 1.7rem;"
          >{{userFirstName}}</strong>, dejanos tu mensaje, consulta, o lo que
          quieras!</p>
      </header>
      <div id="chatSection--messagesSection"></div>
    </div>
    <form class="chatSection--inputTextContainer">
      <textarea
        name="message"
        id="chatSection--inputText"
        cols="25"
        rows="5"
        class="chatSection--inputText"
        placeholder="Escribe tu mensaje"
      ></textarea>
      <button type="submit" id="chatSection--submitBtn"><img
          src="https://res.cloudinary.com/dqykftyy6/image/upload/v1696349640/ProyectoBackEnd/sendArrowChat_b8thij.svg"
          alt="Enviar mensaje"
        /></button>
    </form>
  </section>
</main>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
<script src="socket.io/socket.io.js"></script>
<script src="js/chat.js"></script>